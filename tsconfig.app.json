{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"],
  "files": ["custom.d.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": false,
    "paths": {
      "@/*": ["./src/*"],
      "@images/*": ["./src/assets/images/*"]
    }
  }
}
